* html body
  overflow: hidden

body
  color: #839496
  background-color: #00161C
  // background: url('../images/lightpaperfibers.png') top left repeat fixed
  margin: 0px
  padding: 5em
  font: 16px/1.25 'Droid Sans Mono', 'Consolas', 'Inconsolata', monospace
  font-weight: 400
  min-width: 2.5em

div
  margin: 0px
  border: 0px
  padding: 0px

#content-wrapper
  margin: 0px auto
  // border: 1px solid #0B1182
  // padding: 0 5em

#container
  padding-left: 2.5em
  padding-right: 1.25em
  overflow: hidden

#container .column
  position: relative
  float: left
  padding-bottom: 20000px;  /* X + padding-bottom */
  margin-bottom: -20000px;  /* X */

#empty
  width: 1.25em
  margin-right: -1.25em
  background-color: #002B36

* html #footer-wrapper
  float: left
  position: relative
  width: 100%
  padding-bottom: 10000px
  margin-bottom: -10000px
  background-color: #002B36
  overflow: hidden

#footer
  clear: both
  position: relative
  background-color: #002B36

#statusbar
  background-color: #839496
  color: #002B36

/*** IE6 Fix ***/
* html #gutter
  left: 150px           /* RC width */

#bg-top-center
  height: 1.35em
  background: url('../images/titlebar_center.png') top left repeat


#bg-top-left
  position: relative
  left: -.625em
  width: 2.5em
  height: 1.35em
  background: url('../images/titlebar_left.png')

#bg-top-right
  position: relative
  width: 1.25em
  height: 1.35em
  background: url('../images/titlebar_right.png')

#gutter
  background-color: #073642
  width: 1.25em
  padding: 0px .625em
  right: 2.5em
  margin-left: -100%
  text-align: right

#code
  width: 100%
  background-color: #002B36

p
  margin-top: 1.25em
  margin-bottom: 1.25em

#headerComment p, #gutter p, #footer p
  margin-top: 0
  margin-bottom: 0

.section, .item, .subitem
  padding-left: 2.5em

span
  line-height: 1.25

.comment
  color: #586e75

.keyword
  color: #268bd2

.identifier
  color: #859900

.string
  color: #cb4b16

.subitem .string
  color: #2aa198

.details
  margin-top: 1.25em
  margin-bottom: 1.25em

.subheading, .details li
  margin-top: 1.25em
  margin-bottom: 1.25em

h1
  color: #0B1182
  font-size: 4em
  line-height: 1.25
  margin-top: .625em
  margin-bottom: .625em

h2
  font-size: 2em
  line-height: 1.25
  margin-top: 1.25em
  margin-bottom: .625em

h3
  font-size: 1.125em
  line-height: 1.111
  margin-top: 1.111em
  margin-bottom: 1.111em

.underline
  text-decoration: underline

.italic
  font-style: italic

a
  color: #268bd2
