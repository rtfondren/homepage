body
  margin: 0px
  padding: 50px
  font: 16px/1.25 'Istok Web', Helvetica, Arial, sans-serif
  font-weight: 400

div.content-wrapper
  width: 75%
  margin: 0px auto
  border: 1px solid black
  padding: 2.5em 5em

ul.details
  margin-top: 1em
  margin-bottom: 2em

p.subheading, ul.details li
  margin-top: 1.25em
  margin-bottom: 1.25em

h1
  font-family: 'Playfair Display SC', serif
  font-weight: 900
  font-size: 2.5em
  line-height: 1
  margin-top: 1em
  margin-bottom: 1em

h2
  font-family: 'Josefin Slab', serif
  font-weight: 300
  font-style: italic
  font-size: 1.5em
  line-height: 1.667
  margin-top: 1.667em
  margin-bottom: .833em

h3
  font-family: 'Lora', serif
  font-weight: 700
  font-style: italic
  font-size: 1.25em
  line-height: 1em
  margin-top: 1em
  margin-bottom: 1em

.underline
  text-decoration: underline

.italic
  font-style: italic

a
  color: #00B7FF
